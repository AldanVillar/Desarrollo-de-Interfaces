<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFirebaseApp"
        tools:targetApi="31">
        <activity
            android:name=".views.FavoriteActivity"
            android:exported="false" />
        <activity
            android:name=".views.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.RegisterActivity" />
        <activity android:name=".views.DashboardActivity" />
        <activity android:name=".views.DetailActivity" />
        <activity
            android:name=".models.Productos"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".models.User"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".repositories.DashboardRepository"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".repositories.UserRepository"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".viewmodels.DashboardViewModel"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".viewmodels.LoginViewModel"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".viewmodels.RegisterViewModel"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".adapters.ProductosAdapter"
            tools:ignore="Instantiatable" />
    </application>

</manifest>